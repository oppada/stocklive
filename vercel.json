{
  "version": 2,
  "functions": {
    "api/*.js": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/update-data",
      "schedule": "* * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/update-data",
      "destination": "/api/update-data.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/client/dist/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/index.html"
    }
  ]
}