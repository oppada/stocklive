{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd client && npm install && npm run build",
        "outputDirectory": "client/dist"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node@20.x",
      "config": {
        "includeFiles": ["server/node_modules/**", "client/public/toss_real_150_themes.json"]
      }
    },
    {
      "src": "client/api/uapi/[...path].ts",
      "use": "@vercel/node@20.x",
      "config": {
        "includeFiles": ["client/node_modules/**"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/uapi/:path*",
      "destination": "/client/api/uapi/[...path]"
    },
    {
      "source": "/api/:path*",
      "destination": "/server/index.js"
    }
  ]
}