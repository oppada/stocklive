{
  "version": 2,
  "functions": {
    "api/index.cjs": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/client/dist/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/$1",
      "check": true
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/index.html"
    }
  ]
}