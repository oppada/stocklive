{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/(.*)",
      "destination": "/client/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/update-ranking-cache",
      "schedule": "0 */3 * * *"
    }
  ],
  "functions": {
    "api/index.cjs": {
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": "api/lib/*.cjs,api/krx_stocks.json,api/toss_real_150_themes.json,api/localTokenServer.mjs,api/.env"
    }
  },
  "builds": [
    {
      "src": "client/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" },
      "buildCommand": "npm install && npm run build"
    },
    {
      "src": "api/index.cjs",
      "use": "@vercel/node@3.0.12",
      "config": {
        "includeFiles": [
          "api/lib/*.cjs",
          "api/krx_stocks.json",
          "api/toss_real_150_themes.json",
          "api/localTokenServer.mjs",
          "api/.env"
        ]
      }
    }
  ]
}