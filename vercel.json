{
  "version": 2,
  "functions": {
    "api/*.js": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/update-data",
      "schedule": "* * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/update-data",
      "destination": "/api/update-data.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/favicon.ico",
      "destination": "/favicon.ico"
    },
    {
      "source": "/recommendation",
      "destination": "/index.html"
    },
    {
      "source": "/news",
      "destination": "/index.html"
    },
    {
      "source": "/discovery",
      "destination": "/index.html"
    },
    {
      "source": "/stock/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/chat",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}