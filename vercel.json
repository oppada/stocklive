{
  "installCommand": "npm install --prefix client && npm install --prefix server",
  "buildCommand": "npm run build --prefix client",
  "outputDirectory": "client/dist",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node@20.x",
      "config": {
        "includeFiles": ["server/node_modules/**", "client/public/toss_real_150_themes.json", "server/package.json"]
      }
    },
    {
      "src": "client/api/uapi/[...path].ts",
      "use": "@vercel/node@20.x",
      "config": {
        "includeFiles": ["client/node_modules/**", "client/package.json"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/uapi/:path*",
      "destination": "/client/api/uapi/[...path]"
    },
    {
      "source": "/api/:path*",
      "destination": "/server/index.js"
    }
  ]
}