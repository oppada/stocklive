{
  "functions": {
    "api/index.cjs": {
      "includeFiles": "../server/lib/*.cjs,../server/krx_stocks.json,../server/toss_real_150_themes.json,../server/localTokenServer.js,../server/.env,../server/index.cjs"
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-ranking-cache",
      "schedule": "0 */3 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}