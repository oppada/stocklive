{
  "functions": {
    "api/index.js": {
      "src": "../server/index.js",
      "includeFiles": [
        "../server/lib/**",
        "../server/krx_stocks.json",
        "../server/toss_real_150_themes.json",
        "../server/localTokenServer.js",
        "../server/.env"
      ]
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-ranking-cache",
      "schedule": "0 */3 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}