{
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "lib/**"
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-ranking-cache",
      "schedule": "0 */3 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}